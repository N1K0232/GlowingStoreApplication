@page

@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="register" x-data="auth">
    <div class="text-center wrapper">
        <form x-on:submit.prevent>
            <div class="col-auto mt-2 input-box">
                <input type="text" x-model="firstName" placeholder="Enter your first name" />
            </div>
            <div class="col-auto mt-2 input-box">
                <input type="text" x-model="lastName" placeholder="Enter your last name" />
            </div>
            <div class="col-auto mt-2 input-box">
                <input type="email" x-model="email" placeholder="Enter your email" />
            </div>
            <div class="col-auto mt-2 input-box">
                <input type="password" x-model="password" placeholder="Enter the password for this account" />
                <h6 class="h6" x-text="passwordErrorMessage" x-show="passwordErrorMessage.length != 0 && !isBusy"></h6>
            </div>
            <div class="col-auto mt-2 input-box">
                <input type="password" x-model="confirmPassword" placeholder="Confirm password" />
                <h6 class="h6" x-text="passwordErrorMessage" x-show="passwordErrorMessage.length != 0 && !isBusy"></h6>
            </div>
            <div class="col-auto mt-3">
                <button class="btn" type="submit" x-on:click="register()" x-bind:disabled="invalidRegisterForm() || isBusy">Register</button>
            </div>
            <div class="col-auto mt-2">
                <button class="btn" type="submit" x-on:click="clear()" x-bind:disabled="invalidRegisterForm() || isBusy">Reset</button>
            </div>
            <div class="col-auto mt-2">
                <button class="btn" type="submit" x-on:click="cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("alpine:init", () => {
            auth('@Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName');
        });
    </script>
}